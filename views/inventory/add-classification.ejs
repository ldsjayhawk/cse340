<h1><%= title %></h1>

<%- messages() %>

<% if (errors && errors.length > 0) { %>
  <div id="messages">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form method="post" action = "/inv/add-classification" class="inventory">
    <fieldset>
            <label>Classification Name* <input type = "text" name = "classification_name" id="classification_name" required pattern="^[A-Za-z]+$" value="<%= locals.classification_name %>"></label>
            <div id="required">
                <p>Field required - must only include letters</p>
            </div>
    </fieldset>
    <input type="submit" value="Add Classification">
</form>